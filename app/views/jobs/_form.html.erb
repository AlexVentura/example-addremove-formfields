<%= form_for(job) do |f| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div id="tasks" style="border:1px solid #777;">
    <%= f.fields_for :tasks do |builder| %>
      <div>
        <%= render "task_fields", f: builder %>
      </div>
    <% end %>
  </div>

  <div>
    <br>
    <%= add_child_button "New Task",:tasks,"#tasks" %>
    <%= new_fields_template f, :tasks %>
  </div>

  <div class="actions">
    <br>
    <%= f.submit %>
  </div>
<% end %>
